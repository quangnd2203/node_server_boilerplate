{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "target": "esnext",
    "outDir": "./dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
  },
  "include": [
    "*.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}